# Project settings
PROJECT_NAME           = "Tocin Programming Language"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF         = "A modern, statically-typed programming language"
PROJECT_LOGO          = @CMAKE_SOURCE_DIR@/installer/Tocin_Logo.ico
OUTPUT_DIRECTORY      = @CMAKE_BINARY_DIR@/docs

# Input files
INPUT                 = @CMAKE_SOURCE_DIR@/src \
                       @CMAKE_SOURCE_DIR@/docs
FILE_PATTERNS         = *.cpp *.h *.hpp *.md
RECURSIVE             = YES
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md
EXTRACT_ALL           = YES
EXTRACT_PRIVATE       = YES
EXTRACT_STATIC        = YES

# Output settings
GENERATE_HTML         = YES
HTML_OUTPUT           = html
HTML_FILE_EXTENSION   = .html
HTML_TIMESTAMP        = YES
HTML_DYNAMIC_SECTIONS = YES
SEARCHENGINE          = YES
GENERATE_LATEX        = YES
LATEX_OUTPUT          = latex
USE_PDFLATEX          = YES
PDF_HYPERLINKS        = YES

# Styling
HTML_EXTRA_STYLESHEET = @CMAKE_SOURCE_DIR@/docs/doxygen/custom.css
GENERATE_TREEVIEW     = YES
DISABLE_INDEX         = NO
FULL_SIDEBAR         = YES
HTML_COLORSTYLE_HUE   = 220
HTML_COLORSTYLE_SAT   = 100
HTML_COLORSTYLE_GAMMA = 80

# Advanced features
HAVE_DOT             = YES
DOT_IMAGE_FORMAT     = svg
INTERACTIVE_SVG      = YES
CLASS_GRAPH          = YES
COLLABORATION_GRAPH  = YES
UML_LOOK            = YES
CALL_GRAPH          = YES
CALLER_GRAPH        = YES

# Language specific
OPTIMIZE_OUTPUT_FOR_C = NO
BUILTIN_STL_SUPPORT = YES
EXTRACT_LOCAL_CLASSES = YES

# Source browsing
SOURCE_BROWSER       = YES
INLINE_SOURCES      = YES
STRIP_CODE_COMMENTS = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION  = YES
REFERENCES_LINK_SOURCE = YES
USE_HTAGS           = NO
VERBATIM_HEADERS    = YES

# Warnings
QUIET               = NO
WARNINGS            = YES
WARN_IF_UNDOCUMENTED = YES
WARN_IF_DOC_ERROR   = YES
WARN_NO_PARAMDOC    = YES 